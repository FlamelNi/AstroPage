---
import BlogLayout from '@/components/BlogLayout.astro';
---

<BlogLayout title="About" subtitle="Jae Min Im">
  <div class="contact-content">
    <div class="card">
      <h3>About Me</h3>
      <p>
        Hi, I'm Jae Min Im. Have a question, feedback, or just want to say hello?
        Feel free to reach out through any of the channels below.
      </p>
      <div class="contact-info">
        <div class="contact-item">
          <span class="contact-label">Email</span>
          <a href="mailto:jaeminim@berkeley.edu">jaeminim@berkeley.edu</a>
        </div>
      </div>
    </div>
  </div>
</BlogLayout>

<style>
  .contact-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .card h3 {
    margin-bottom: var(--spacing-md);
  }

  .card p {
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .contact-item {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .contact-label {
    font-size: var(--font-size-small);
    color: var(--color-text-muted);
    font-weight: var(--font-weight-medium);
  }

  .contact-item a {
    color: var(--color-accent);
  }

  .contact-item a:hover {
    text-decoration: underline;
  }
</style>
