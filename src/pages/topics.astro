---
import BlogLayout from '@/components/BlogLayout.astro';
import { TOPICS } from '@/lib/topics';
---

<BlogLayout title="Topics" subtitle="Explore documentation and blog content">
  <div class="card-grid">
    {TOPICS.map((topic) => (
      <a
        href={topic.type === 'docs' ? `/docs/${topic.slug}/` : `/blog/${topic.slug}/`}
        class="card topic-card"
      >
        <span class="topic-type">{topic.type === 'docs' ? 'Documentation' : 'Blog'}</span>
        <h3>{topic.label}</h3>
        <p class="topic-description">
          {topic.type === 'docs'
            ? 'Browse documentation and guides'
            : 'Read blog posts and updates'}
        </p>
      </a>
    ))}
  </div>
</BlogLayout>

<style>
  .topic-type {
    display: inline-block;
    font-size: var(--font-size-small);
    color: var(--color-accent);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--spacing-xs);
  }
</style>
